{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": [0],
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "max-len": [1, 140],
    "no-multiple-empty-lines": [0],
   "no-trailing-spaces": [0],
   "arrow-body-style": [0],
  }
}

